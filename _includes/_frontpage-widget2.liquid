{% capture widget_url %}{% if include.widget.url contains 'http' %}{{ include.widget.url }}{% else %}{{ site.baseurl }}{{ include.widget.url }}{% endif %}{% endcapture %}
<div class="row align-items-center">
  <div class="col-md-3 text-center text-md-start">
    <a href="{{ widget_url }}">
      {% if include.widget.image %}
        <img class="img-fluid rounded" src="{{ site.urlimg }}{{ include.widget.image }}" alt="{{ site.title }}" />
      {% endif %}
      {% if include.widget.video %}{{ include.widget.video }}{% endif %}
    </a>
  </div>
  <div class="col-md-4">
    <p class="mb-1">
      {{ include.widget.title }}<br/>
      <a href="https://github.com/aspectran/aspectran/actions?query=workflow%3A%22Java+CI%22" target="_blank" title="Build Status"><img src="https://github.com/aspectran/aspectran/workflows/Java%20CI/badge.svg" alt="Build Status"/></a>
      <a href="https://github.com/aspectran/aspectran" target="_blank" title="Apache License 2.0"><img src="https://img.shields.io/badge/license-Apache%202-red.svg" alt="License"/></a>
    </p>
    <p class="d-md-none"><a class="btn btn-sm btn-primary" href="{{ widget_url }}">{% if include.widget.button_text %}{{ include.widget.button_text }}{% else %}{{ site.data.messages[page.lang].details }}{% endif %}</a></p>
  </div>
  <div class="col-md-5">
    <p>{{ include.widget.text }}</p>
  </div>
</div>
