{% capture widget_url %}{% if include.widget.url contains 'http' %}{{ include.widget.url }}{% else %}{{ site.baseurl }}{{ include.widget.url }}{% endif %}{% endcapture %}
<div class="grid-x grid-padding-x">
  <div class="cell">
    <a href="{{ widget_url }}">
  		{% if include.widget.image %}
  			{%comment%}TODO lazy loading{%endcomment%}
  			{%comment%}<img class="lazy" data-src="{{ site.urlimg }}{{ include.widget.image }}" width="100%" alt="" />{%endcomment%}
  			{%comment%}<noscript>{%endcomment%}
  			<img class="thumb" src="{{ site.urlimg }}{{ include.widget.image }}" width="100%" alt="" />
  			{%comment%}</noscript>{%endcomment%}
  		{% endif %}
  		{% if include.widget.video %}{{ include.widget.video }}{% endif %}
  	</a>
  </div>
  <div class="cell">
  	<h4><a href="{{ widget_url }}">{{ include.widget.title }}</a></h4>
    <p><a href="{{ widget_url }}">{{ include.widget.text }}</a></p>
  </div>
</div>
