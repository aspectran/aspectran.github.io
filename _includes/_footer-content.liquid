        <div class="grid-container{% if include.auto_lang %} auto-lang {{ include.lang }}{% endif %}">
          <div class="grid-x grid-padding-x">
          {% if site.logo_footer %}
            <div class="medium-2 large-1 cell hide-for-small-only t5">
              <h5><a class="logo" href="{{ site.baseurl }}/{% if include.lang != nil %}{{ include.lang }}/{% endif %}aspectran/" title="{{ site.title }}"><img src="{{ site.baseurl }}/assets/img/{{ site.logo_footer }}" width="100" height="100" title="{{ site.title }}"/></a></h5>
            </div>
            <div class="medium-6 large-4 cell">
          {% else %}
            <div class="medium-8 large-5 cell">
          {% endif %}
              <a href="{{ site.baseurl }}/{% if include.lang != nil %}{{ include.lang }}/{% endif %}aspectran/"><h5>{{ site.data.messages[include.lang].about_aspectran }}</h5></a>
              <p><a href="{{ site.baseurl }}/{% if include.lang != nil %}{{ include.lang }}/{% endif %}aspectran/">{{ site.data.messages[include.lang].aspectran_teaser }}</a></p>
            </div>

            <div class="small-6 medium-4 large-3 large-offset-1 cell">
              {% for network_item in site.data.network_en limit: 1 %}
                <h5>{{ network_item.title }}</h5>
              {% endfor %}
              <ul class="no-bullet">
              {% for network_item in site.data.network_en offset: 1 %}
                {% if network_item.url contains 'http' %}{% assign domain = '' %}{% else %}{% assign domain = site.baseurl %}{% endif %}
                <li {% if network_item.class %}class="{{ network_item.class }}" {% endif %}> <a href="{{ domain }}{{ network_item.url }}" {% if network_item.url contains 'http' %}target="_blank" {% endif %} title="{{ network_item.title }}">{{ network_item.name }}</a></li>
              {% endfor %}
              </ul>
            </div>
          </div><!-- /.grid-x -->
        </div>
