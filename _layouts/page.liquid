---
layout: default
---
<section itemscope itemtype="https://schema.org/Article">

  {% include _masthead.liquid %}

  <div class="container contour pb-4">

    <div class="row">
      {% if page.sidebar == "toc" %}
      <div class="mt-4 col-lg-3 order-lg-1">
        {% include _sidebar-toc.liquid %}
      </div>
      {% elsif page.sidebar == "toc-right" %}
      <div class="mt-4 col-lg-3 order-lg-2">
        {% include _sidebar-toc.liquid side="right" %}
      </div>
      {% endif %}

      <div class="mt-4 {% if page.sidebar == 'toc' %}col-lg-9 order-lg-2{% elsif page.sidebar == 'toc-right' %}col-lg-9 order-lg-1{% elsif page.sidebar == 'left' %}col-lg-8 order-lg-2{% elsif page.sidebar == 'right' %}col-lg-8 order-lg-1{% elsif page.format contains 'margin' %}col-lg-10 offset-lg-1{% endif %}">
        <article>

          {% if page.inside_heading == true %}

          <header>
            {% if page.image.title %}
            <figure>
              <img itemprop="image" src="{{ site.urlimg }}{{ page.image.title }}" width="970" alt="{{ page.title | escape_once }}">
              {% if page.image.caption_url and page.image.caption %}
              <figcaption class="text-right">
                <a href="{{ page.image.caption_url }}">{{ page.image.caption }}</a>
              </figcaption>
              {% elsif page.image.caption %}
              <figcaption class="text-right">
                {{ page.image.caption }}
              </figcaption>
              {% endif %}
            </figure>
            {% endif %}

            {% if page.subheadline %}
            <p class="subheadline" itemprop="alternativeHeadline">{{ page.subheadline }}</p>
            {% endif %}
            <h1 itemprop="headline">{{ page.title }}</h1>
            {% if page.teaser %}
            <p class="teaser" itemprop="description">{{ page.teaser }}</p>
            {% endif %}
          </header>

          {% endif %}

          <span itemprop="articleBody">
          {{ content }}
          </span>

          {% if page.show_meta == true %}
          {% include _meta_information.liquid %}
          {% endif %}

        </article>

        {% if page.comments == true %}
        <div class="mt-2">
          {% include _comments.liquid %}
        </div>
        {% endif %}

      </div>

      {% if page.sidebar == "right" or page.sidebar == "left" %}
      <div class="mt-4 col-lg-4 {% if page.sidebar == "right" %}order-lg-2{% else %}order-lg-1{% endif %}">
        {% if page.lang == 'ko' %}
          {% include _sidebar_ko.liquid %}
        {% else %}
          {% include _sidebar_en.liquid %}
        {% endif %}
      </div>
      {% endif %}

    </div>

</div>

</section>
